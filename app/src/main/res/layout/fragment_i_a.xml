<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#580CEF "
    tools:context=".IAFragment">

    <ImageView
        android:id="@+id/logoView"
        android:layout_width="103dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/chatView"
        android:layout_width="310dp"
        android:layout_height="101dp"
        android:layout_marginTop="64dp"
        android:scaleType="fitXY"
        android:src="@drawable/chatt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.841"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="265dp"
        android:layout_height="56dp"
        android:fontFamily="sans-serif-light"
        android:text="Nos ajude a conhecer mais sobre você:"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/chatView"
        app:layout_constraintEnd_toEndOf="@+id/chatView"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="@+id/chatView"
        app:layout_constraintTop_toTopOf="@+id/chatView"
        app:layout_constraintVertical_bias="0.644" />

    <ImageView
        android:id="@+id/ddebb"
        android:layout_width="270dp"
        android:layout_height="154dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/ddebb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatView" />

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="86dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/shape_bottom_ia"
        android:backgroundTint="#00C2CB"
        android:fontFamily="sans-serif"
        android:text="Doador  e                               Beneficiário"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ddebb"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="225dp"
        android:layout_height="149dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/buttonOng"
        android:layout_width="200dp"
        android:layout_height="86dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/shape_bottom_ia"
        android:backgroundTint="#00C2CB"
        android:fontFamily="sans-serif"
        android:text="ONG"
        android:textSize="24sp"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:layout_constraintVertical_bias="0.065" />

</androidx.constraintlayout.widget.ConstraintLayout>